{
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Args": {
                "outputTemplate": "{Timestamp:o} [{Level:u3}] [{Environment}] ({ApplicationName}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithThreadName",
      "WithExceptionDetails"
    ]
  },
  "AllowedHosts": "*"
}
